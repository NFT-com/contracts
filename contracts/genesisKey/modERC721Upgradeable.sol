        bool[] memory tokenIdUser = new bool[](_totalSupply);

        for (uint256 i = 0; i < _totalSupply; i++) {
            if (ERC721Upgradeable.ownerOf(i) == user) {
                tokenIdUser[i] = true;
            }
        }

        return tokenIdUser;
    }

